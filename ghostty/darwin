theme = light:rose-pine-dawn, dark:catppuccin-mocha
font-size = 14.5

keybind = performable:super+c=copy_to_clipboard
keybind = performable:super+v=paste_from_clipboard

keybind = super+ctrl+\=goto_split:next

keybind = super+h=new_split:left
keybind = super+l=new_split:right
keybind = super+k=new_split:up
keybind = super+j=new_split:down

keybind = ctrl+super+h=resize_split:left,20
keybind = ctrl+super+l=resize_split:right,20
keybind = ctrl+super+k=resize_split:up,20
keybind = ctrl+super+j=resize_split:down,20
